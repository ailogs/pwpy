CASAPATH=%casa%

if [ -d $CASAPATH/lib64 ] ; then
    lib=$CASAPATH/lib64
else
    lib=$CASAPATH/lib
fi

if [ x"$LD_LIBRARY_PATH" = x ] ; then
   LD_LIBRARY_PATH="$lib"
else
   LD_LIBRARY_PATH="$lib:$LD_LIBRARY_PATH"
fi

PYTHONPATH=
export LD_LIBRARY_PATH PYTHONPATH CASAPATH
exec $lib/casapy/bin/python "$@"
