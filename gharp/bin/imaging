#!/bin/tcsh

set vis=$1
if (! -e $vis) then
	exit(0)
endif

set lspec="line=chan,1"

set region

# create the cleaned image
rm -r $vis.mp $vis.bm $vis.cl $vis.cm >& junk
invert vis=$vis $lspec map=$vis.mp beam=$vis.bm cell=1 imsize=1200 sup=0
clean map=$vis.mp beam=$vis.bm out=$vis.cl niters=5
restor map=$vis.mp beam=$vis.bm model=$vis.cl out=$vis.cm mode=convolve fwhm=10

# fit a point source to the image
fitpoint $vis

# write a png version of the image
cgdisp in=$vis.cm labtyp=arcsec device=${vis}.png/png $region olay=olay
#cgdisp in=$vis.cm labtyp=arcsec device=/xs $region


