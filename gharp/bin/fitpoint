#!/bin/tcsh

set infile=$1

if (! -e $infile) then
	exit(0)
endif

set filename=$infile.dat
echo "outputting data to $filename"
puthd in=$infile/source value=$infile ; echo `imfit in=$infile.cm object=point | grep Offset` " " `listobs vis=$infile options=nobase | grep $infile | grep UT` "Az " `./uvcheck vis=GPS var=obsaz | grep Average` "El " `./uvcheck vis=GPS var=obsel | grep Average` "Chi " `./uvcheck vis=GPS var=chi | grep Average` >> ./$filename

echo
echo `imfit in=$infile.cm object=point | grep Offset` " " `listobs vis=$infile options=nobase | grep $infile | grep UT` "Az " `./uvcheck vis=GPS var=obsaz | grep Average` "El " `./uvcheck vis=GPS var=obsel | grep Average` "Chi " `./uvcheck vis=GPS var=chi | grep Average` 
echo

