#!/bin/tcsh
# MATH alias
alias MATH 'set \!:1 = `echo "\!:3-$" | bc -l`'
#

if ($#argv < 3) then
        echo "Must give a vis dataset start time and num-iters"
        exit(0)
endif

set n = 0
set vis = $1
set hour = $2
set maxiters = $3
set oldhour = $hour
set outfile = temp
while ($n < $maxiters)
	MATH hour = ( $hour + 0.1 )
	set t1=`atahourstohhmmss $oldhour`
	set t2=`atahourstohhmmss $hour`
	set hr=`awk 'BEGIN { print substr("'"$t1"'", 1,2) }'`
	set min=`awk 'BEGIN { print substr("'"$t1"'", 4,2) }'`
	set sec=`awk 'BEGIN { print substr("'"$t1"'", 7,2) }'`
	set time=$hr-$min-$sec

	echo "Az " `./uvcheck vis=$vis var=antaz select="time($t1,$t2)" | grep Average` "El " `./uvcheck vis=$vis var=antel select="time($t1,$t2)" | grep Average`

	@ n += 1
	set oldhour = $hour
end

