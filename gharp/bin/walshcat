#!/bin/tcsh
set vis=$1

rm -rf tmp1
rm -rf tmp2
rm -rf tmp3
rm -rf tmp4
rm -rf ${vis}_samewalsh
rm -rf ${vis}_diffwalsh

uvcat vis=$vis out=tmp1 select="ant(1,5,13,17,27,31,35,39,40)(1,5,13,17,27,31,35,39,40)"
uvcat vis=$vis out=tmp2 select="ant(2,6,10,22,24,28,36,41)(2,6,10,22,24,28,36,41)"
uvcat vis=$vis out=tmp3 select="ant(3,7,11,15,19,25,29)(3,7,11,15,19,25,29)"
uvcat vis=$vis out=tmp4 select="ant(4,8,12,16,20,26,30,38)(4,8,12,16,20,26,30,38)"
uvcat vis=tmp1,tmp2,tmp3,tmp4 out=${vis}_samewalsh

rm -rf tmp1
rm -rf tmp2
rm -rf tmp3
rm -rf tmp4

uvcat vis=$vis out=tmp1 select="ant(1,5,13,17,27,31,35,39,40)(2,6,10,22,24,28,36,41,3,7,11,15,19,25,29,4,8,12,16,20,26,30,38)"
uvcat vis=$vis out=tmp2 select="ant(2,6,10,22,24,28,36,41)(3,7,11,15,19,25,29,4,8,12,16,20,26,30,38,1,5,13,17,27,31,35,39,40)"
uvcat vis=$vis out=tmp3 select="ant(3,7,11,15,19,25,29)(4,8,12,16,20,26,30,38,1,5,13,17,27,31,35,39,40,2,6,10,22,24,28,36,41)"
uvcat vis=$vis out=tmp4 select="ant(4,8,12,16,20,26,30,38)(1,5,13,17,27,31,35,39,40,2,6,10,22,24,28,36,41,3,7,11,15,19,25,29)"
uvcat vis=tmp1,tmp2,tmp3,tmp4 out=${vis}_diffwalsh

rm -rf tmp1
rm -rf tmp2
rm -rf tmp3
rm -rf tmp4
