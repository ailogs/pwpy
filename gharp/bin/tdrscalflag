#!/bin/tcsh

if ($#argv < 1) then
	echo "Must give a cal-dataset"
	exit(0)
endif

set cal=$1

# flag all cal data but good 200 channels
#uvflag vis=$cal flagval=unflag
uvflag vis=$cal flagval=flag line=chan,1,513
uvflag vis=$cal flagval=flag line=chan,599,1
uvflag vis=$cal flagval=flag line=chan,224,801
uvflag vis=$cal flagval=flag select="ant(26,29)"

# Flag channels that appear to be corrupted
uvflag vis=$cal flagval=flag line=chan,16,620
uvflag vis=$cal flagval=flag line=chan,6,726
uvflag vis=$cal flagval=flag line=chan,7,784
